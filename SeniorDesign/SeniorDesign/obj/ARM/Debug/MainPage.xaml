<Page
    x:Class="SeniorDesign.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SeniorDesign"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="30" Grid.Row="1" Grid.ColumnSpan="3">Motor Control</TextBlock>
        <Button x:ConnectionId='1' Name="btnIgnitionOn" Margin="5" Background="Green" Foreground="White" Grid.Row="2"
                                           >Ignition On</Button>
        <Button x:ConnectionId='2' Name="btnIgnitionOff" Margin="5" Background="Red" Foreground="White" IsEnabled="False" 
                Grid.Row="2" Grid.Column="1"                             >Ignition Off</Button>
        <Button x:ConnectionId='3' Name="btnForward" Margin="5" Background="Blue" Foreground="DarkBlue" IsEnabled="False"
                Grid.Row="3"                         >Forward</Button>
        <Button x:ConnectionId='4' Name="btnReverse" Margin="5" Background="Orange" Foreground="OrangeRed" IsEnabled="False"
                Grid.Row="3" Grid.Column="1"                         >Reverse</Button>
        <Button x:ConnectionId='5' Name="btnTurnLeft" Margin="5" Background="Blue" Foreground="DarkBlue" IsEnabled="False"
                Grid.Row="4"                       >Turn Left</Button>
        <Button x:ConnectionId='6' Name="btnTurnRight" Margin="5" Background="Orange" Foreground="OrangeRed" IsEnabled="False"
                Grid.Row="4" Grid.Column="1"                       >Turn Right</Button>
        <Button x:ConnectionId='7' Name="btnStop" Margin="5" Background="Salmon" Foreground="Sienna" IsEnabled="True"
                Grid.Row="5"                      >Stop</Button>
    </Grid>
</Page>

